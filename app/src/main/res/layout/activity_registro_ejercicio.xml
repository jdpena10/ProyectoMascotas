<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monitoreo de ejercicio"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="50dp" />

    <TextView
        android:id="@+id/titulo_mascotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="por favor seleccione la mascota que va a ser monitoreada de la lista"
        android:textSize="15dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_mascotas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" />


    <Button
        android:id="@+id/btn_iniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INICIAR"
        android:backgroundTint="#44e087"
        android:onClick="iniciarSimulacion"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_pausar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PAUSAR"
        android:backgroundTint="#bfb081"
        android:onClick="pausarSimulacion"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_finalizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FINALIZAR"
        android:backgroundTint="#f76060"
        android:onClick="finalizarSimulacion"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/txt_distancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00km"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"/>

    <TextView android:id="@+id/txt_duracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0min" android:textSize="20sp"/>

    <TextView android:id="@+id/txt_calorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0cal" android:textSize="20sp"/>

</LinearLayout>

