<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido/a: "
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#3B84F1"/>

        <TextView
            android:id="@+id/textv_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#3B84F1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario:"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/textv_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="22dp"
            android:textColor="#666666"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_administracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Administrar"
            android:textSize="16dp"
            android:padding="10dp"/>

        <Button
            android:id="@+id/btn_editar_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:textSize="16dp"
            android:padding="10dp"/>

        <Button
            android:id="@+id/btn_cerrar_sesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar SesiÃ³n"
            android:textSize="16dp"
            android:padding="10dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_registrarMascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mis Mascotas"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:backgroundTint="#633fdd"/>

    <Button
        android:id="@+id/btn_buscarVeterinario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar Veterinarios"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:backgroundTint="#633fdd"/>

    <Button
        android:id="@+id/monitoreo_ejercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monitorear ejercicios de mascota"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:backgroundTint="#633fdd"/>

    <Button
        android:id="@+id/agendar_cita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agendar cita de mascota"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:backgroundTint="#633fdd"/>

    <Button
        android:id="@+id/registro_de_adopcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar mascota para adopcion"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:backgroundTint="#633fdd"/>

    <Button
        android:id="@+id/lita_adopcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mascotas en adopcion"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:backgroundTint="#633fdd"/>

    <Button
        android:id="@+id/btn_alimentacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alimentacion de mis mascotas"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:backgroundTint="#633fdd"/>


    <Button
        android:id="@+id/btn_paseadores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paseadores de mascotas"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:backgroundTint="#633fdd"/>

        <Button
            android:id="@+id/btn_cuidador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuidadores"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:backgroundTint="#633fdd"/>

        <Button
            android:id="@+id/btn_paseo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pasear mascota"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#633fdd"/>
      </LinearLayout>
</ScrollView>






