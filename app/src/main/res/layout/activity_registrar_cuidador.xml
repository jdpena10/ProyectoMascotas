<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/etNombre"
            android:hint="Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textColorHint="#757575"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp"
            android:minHeight="64dp" />

        <EditText
            android:id="@+id/etAddress"
            android:hint="Dirección"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textColorHint="#757575"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etEmail"
            android:hint="Correo Electrónico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="16sp"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="#757575"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etPhone"
            android:hint="Número de Celular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="16sp"
            android:inputType="phone"
            android:textColor="#000000"
            android:textColorHint="#757575"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etAvailability"
            android:hint="Disponibilidad (ej. Lunes a Viernes 9:00 AM - 5:00 PM)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textColorHint="#757575"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <FrameLayout
            android:id="@+id/flPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/ic_default_image"
            android:gravity="center">

            <TextView
                android:id="@+id/tvUploadPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sube tu foto"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="#66000000"
                android:padding="8dp" />

            <ImageView
                android:id="@+id/ivProfilePhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:contentDescription="Foto de Perfil" />
        </FrameLayout>

        <Button
            android:id="@+id/btnRegistrarCuidador"
            android:text="Registrarme como Cuidador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:textSize="16sp"
            android:minHeight="64dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="#1976D2"
            android:elevation="4dp" />

        <Button
            android:id="@+id/btnEliminarCuidador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar Registro como Cuidador"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:textSize="16sp"
            android:minHeight="64dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="#D32F2F"
            android:elevation="4dp" />

    </LinearLayout>
</ScrollView>





