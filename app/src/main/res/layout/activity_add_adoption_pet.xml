<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Título sección mascota -->
        <TextView
            android:id="@+id/tvPetInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Información de la Mascota"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"/>

        <!-- Campos de la mascota -->
        <EditText
            android:id="@+id/etPetName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nombre de la mascota"
            android:inputType="text"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:textSize="16sp"
            android:elevation="1dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/etPetAge"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Edad de la mascota"
            android:inputType="number"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:textSize="16sp"
            android:elevation="1dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/etPetType"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Tipo de mascota (Perro, Gato, etc.)"
            android:inputType="text"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:textSize="16sp"
            android:elevation="1dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/etPetBreed"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Raza de la mascota"
            android:inputType="text"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:textSize="16sp"
            android:elevation="1dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/etPetHealthStatus"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Estado de salud"
            android:inputType="text"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:textSize="16sp"
            android:elevation="1dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/etPetLocation"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Ubicación"
            android:inputType="text"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:textSize="16sp"
            android:elevation="1dp"
            android:layout_marginBottom="10dp"/>

        <Spinner
            android:id="@+id/spinnerAdoptionStatus"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:elevation="1dp"
            android:layout_marginBottom="20dp"/>

        <!-- Separador visual -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="10dp" />

        <!-- Título sección usuario -->
        <TextView
            android:id="@+id/tvUserInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Información del Usuario"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"/>

        <!-- Campos del usuario -->
        <EditText
            android:id="@+id/correoUser"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Correo electrónico del usuario"
            android:inputType="textEmailAddress"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:textSize="16sp"
            android:elevation="1dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/etUserPhone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Número de celular"
            android:inputType="phone"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:textSize="16sp"
            android:elevation="1dp"
            android:layout_marginBottom="20dp"/>

        <!-- Botón de registro -->
        <Button
            android:id="@+id/btnRegisterPet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Registrar Mascota en Adopción"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#4CAF50"
            android:textSize="16sp"
            android:elevation="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
</ScrollView>


