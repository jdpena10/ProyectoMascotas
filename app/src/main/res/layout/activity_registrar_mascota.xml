<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Mascota"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Campo: Nombre -->
        <EditText
            android:id="@+id/et_pet_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:hint="Nombre de la mascota"
            android:paddingHorizontal="16dp"
            android:textColorHint="#888888"
            android:textColor="#000000"
            android:elevation="2dp"
            android:layout_marginBottom="16dp" />

        <!-- Campo: Tipo -->
        <EditText
            android:id="@+id/et_pet_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:hint="Tipo de mascota (ej: Perro, Gato)"
            android:paddingHorizontal="16dp"
            android:textColorHint="#888888"
            android:textColor="#000000"
            android:elevation="2dp"
            android:layout_marginBottom="16dp" />

        <!-- Campo: Raza -->
        <EditText
            android:id="@+id/et_pet_breed"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:hint="Raza"
            android:paddingHorizontal="16dp"
            android:textColorHint="#888888"
            android:textColor="#000000"
            android:elevation="2dp"
            android:layout_marginBottom="16dp" />

        <!-- Campo: Edad -->
        <EditText
            android:id="@+id/et_pet_age"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:hint="Edad"
            android:inputType="number"
            android:paddingHorizontal="16dp"
            android:textColorHint="#888888"
            android:textColor="#000000"
            android:elevation="2dp"
            android:layout_marginBottom="24dp" />

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#1976D2"
            android:text="Registrar Mascota"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:elevation="4dp" />

        <!-- Botón Volver -->
        <Button
            android:id="@+id/btnVolver"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#9E9E9E"
            android:text="Volver"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:elevation="4dp"
            android:layout_marginBottom="32dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMascotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            tools:listitem="@layout/item_mascota" />

    </LinearLayout>
</ScrollView>

