<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5"
    android:weightSum="1">

    <!-- Campo de texto para el nombre -->
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese nombre"
        android:textSize="18sp"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_marginBottom="12dp"
        android:importantForAccessibility="yes" />

    <!-- Campo de texto para el nombre de usuario -->
    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese usuario"
        android:textSize="18sp"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_marginBottom="12dp"
        android:importantForAccessibility="yes" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el correo electronico"
        android:textSize="18sp"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_marginBottom="12dp"
        android:importantForAccessibility="yes" />

    <EditText
        android:id="@+id/et_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese la direccion"
        android:textSize="18sp"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_marginBottom="12dp"
        android:importantForAccessibility="yes" />


    <!-- Campo de texto para la contraseña -->
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese contraseña"
        android:textSize="18sp"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_marginBottom="12dp"
        android:importantForAccessibility="yes" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_agregar_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Usuario"
            android:textSize="16dp"
            android:textColor="@android:color/white"
            android:backgroundTint="#009688"
            android:padding="10dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_eliminar_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar Usuario"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#D32F2F"
            android:padding="10dp"
            android:layout_marginEnd="390dp" />

        <Button
            android:id="@+id/btn_volver_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF9800"
            android:padding="10dp" />

    </LinearLayout>



    <!-- Etiqueta "Usuarios" -->
    <TextView
        android:id="@+id/tv_usuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USUARIOS:"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="left" />

    <!-- ListView para mostrar usuarios -->
    <ListView
        android:id="@+id/listViewUsuarios"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible" />
</LinearLayout>


