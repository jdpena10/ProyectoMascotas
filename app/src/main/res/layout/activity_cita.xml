<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FAFAFA">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agendar Cita Veterinaria"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <EditText
        android:id="@+id/nombreVeterinario"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nombre Veterinario"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:textColorHint="#888888"
        android:elevation="2dp"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/direccion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="DirecciÃ³n"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:textColorHint="#888888"
        android:elevation="2dp"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/fecha"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Fecha (YYYY-MM-DD)"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:textColorHint="#888888"
        android:elevation="2dp"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/hora"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Hora (HH:MM)"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:textColorHint="#888888"
        android:elevation="2dp"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/motivo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Motivo de la cita"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:textColorHint="#888888"
        android:elevation="2dp"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/nombreMascota"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nombre de la mascota"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:textColorHint="#888888"
        android:elevation="2dp"
        android:layout_marginBottom="12dp" />

    <Spinner
        android:id="@+id/spinnerVeterinarias"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:elevation="2dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnAgendar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Agendar Cita"
        android:textColor="#FFFFFF"
        android:background="#4CAF50"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

</LinearLayout>

